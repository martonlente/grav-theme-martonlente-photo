<!DOCTYPE html>
<html lang="{{ (grav.language.getActive ?: grav.config.site.default_lang)|e }}">
<head>
{% block head %}
  <meta charset="utf-8" />
  <title>{% if header.title %}{{ header.title|e }} | {% endif %}{{ site.title|e }}</title>

  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {% include 'partials/metadata.html.twig' %}

  <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png')|e }}" />
  <link rel="canonical" href="{{ page.canonical(true)|e }}" />
{% endblock head %}

{% block stylesheets %}
  {% do assets.addCss('theme://node_modules/reset-css/reset.css', 100) %}
  {% do assets.addCss('theme://baseutil-css/build/baseutil.css', 99) %}
  {% do assets.addCss('theme://fonts/nimbus-sans-l-fontfacekit/web fonts/nimbussansl_regular_macroman/stylesheet.css', 98) %}
  {% do assets.addCss('theme://css-compiled/custom.css', 97) %}
{% endblock %}

{% block javascripts %}
  {% do assets.addJs('theme://node_modules/isotope-layout/dist/isotope.pkgd.min.js', 100) %}
  {% do assets.addJs('theme://js/app.js', 99) %}
{% endblock %}

{% block assets deferred %}
  {{ assets.css()|raw }}
  {{ assets.js()|raw }}
{% endblock %}
</head>
<body id="top" class="{{ page.header.body_classes|e }}">

{% block header %}
  {# TODO: check class 'container' position #}
  <header class="container position-fixed pt-2 top-0 start-0 w-100 z-index-1">
    <div class="row">
      <div class="col-16 d-flex justify-content-between">
        <a class="d-block fs-3 letter-spacing-lg lh-1 primary text-decoration-none text-uppercase" href="{{ home_url|e }}">{{ config.site.title|e }}</a>
        <div class="fs-3 grey-50 letter-spacing-lg lh-1 text-uppercase">
          {# TODO: add field year #}
          2024
        </div>
      </div>
    </div>

    {# 
      {% block header_navigation %}
        <nav>
          {% include 'partials/navigation.html.twig' %}
        </nav>
      {% endblock %}
    #}
  </header>
{% endblock %}

{% block body %}
  <main class="pt-8">
    {% block content %}{% endblock %}
  </main>
{% endblock %}

{% block footer %}
  <footer class="container pb-2">
    <div class="row">
      <div class="col-16 d-flex justify-content-between">
        <div>
          Open source: <a class="primary" href="#" target="_blank">grav-theme-martonlente-photo</a>
        </div>
        <div>
          Copyright © 2024 Márton Lente
        </div>
      </div>
    </div>
  </footer>
{% endblock %}

{% block bottom %}
  {{ assets.js('bottom')|raw }}
{% endblock %}

</body>
</html>
